<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/profilr"
        android:layout_width="match_parent"
        android:layout_height="84.2dp"
        android:background="@drawable/profilr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/frame_89"
            android:layout_width="197.17dp"
            android:layout_height="60.14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/frame3" />

            <TextView
                android:id="@+id/john_joshua"
                android:layout_width="93dp"
                android:layout_height="17dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageView13"
                android:gravity="top"
                android:lineSpacingExtra="-3sp"
                android:text="John Joshua"
                android:textAppearance="@style/john_joshua" />

            <TextView
                android:id="@+id/thanks_for_"
                android:layout_width="125dp"
                android:layout_height="17dp"
                android:layout_below="@+id/john_joshua"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/imageView13"
                android:gravity="top"
                android:lineSpacingExtra="2sp"
                android:text="Thanks for your service"
                android:textAppearance="@style/thanks_for_"
                android:translationY="-0.97sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>