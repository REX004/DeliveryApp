<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sesion2.LogInEmpty"
    android:background="@color/white">

    <Button
        android:id="@+id/BT_SignUp3"
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="122dp"
        android:background="@drawable/borders_button"
        app:backgroundTint="#A7A7A7"
        android:fontFamily="@font/roboto_medium"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_password" />

    <TextView
        android:id="@+id/or_sign_in_3"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="or sign in using"
        android:fontFamily="@font/roboto_medium"
        android:textAppearance="@style/already_hav"
        app:layout_constraintEnd_toEndOf="@+id/have_accaont3"
        app:layout_constraintStart_toStartOf="@+id/have_accaont3"
        app:layout_constraintTop_toBottomOf="@+id/have_accaont3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/or_sign_in_3"
        app:layout_constraintStart_toStartOf="@+id/or_sign_in_3"
        app:layout_constraintTop_toBottomOf="@+id/or_sign_in_3"
        app:srcCompat="@drawable/google_znachok" />

    <TextView
        android:id="@+id/have_accaont3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/already_hav"
        android:textAppearance="@style/already_hav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BT_SignUp3" />

    <TextView
        android:id="@+id/sign_in3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lineSpacingExtra="0sp"
        android:text="Sign Up"
        android:fontFamily="@font/roboto_medium"
        android:textAppearance="@style/sign_in"
        app:layout_constraintBottom_toBottomOf="@+id/have_accaont3"
        app:layout_constraintStart_toEndOf="@+id/have_accaont3"
        app:layout_constraintTop_toTopOf="@+id/have_accaont3" />

    <TextView
        android:id="@+id/ET_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/ET_password"
        app:layout_constraintStart_toStartOf="@+id/ET_password" />

    <EditText
        android:id="@+id/ET_password"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/borders_editing"
        android:ems="10"
        android:inputType="textPassword"
        android:fontFamily="@font/roboto_medium"
        android:hint="**********"
        android:textColor="#3A3A3A"
        android:drawableRight="@drawable/eye_slash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_name" />

    <TextView
        android:id="@+id/remember_pa"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="113dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="Remember password "
        android:textAppearance="@style/remember_pa"
        android:translationY="-0.97sp"
        app:layout_constraintEnd_toStartOf="@+id/forgot_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ET_password" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="269dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="2sp"
        android:text="Forgot Password? "
        android:textAppearance="@style/forgot_pass"
        android:translationY="-0.97sp"
        app:layout_constraintBottom_toBottomOf="@+id/remember_pa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/remember_pa" />

    <EditText
        android:id="@+id/ET_name"
        android:layout_width="342dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/borders_editing"
        android:ems="10"
        android:inputType="text"
        android:fontFamily="@font/roboto_medium"
        android:hint="Name"
        android:textColor="#3A3A3A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/lablename4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:text="Email Address"
        app:layout_constraintBottom_toTopOf="@+id/ET_name"
        app:layout_constraintStart_toStartOf="@+id/ET_name" />

    <TextView
        android:id="@+id/welcome_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="207dp"
        android:text="Welcome Back"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="0sp"
        android:fontFamily="@font/roboto_medium"
        android:text="Fill in your email and password to continue"
        android:textAppearance="@style/complete_th"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/welcome_back"
        app:layout_constraintTop_toBottomOf="@+id/welcome_back" />

</androidx.constraintlayout.widget.ConstraintLayout>